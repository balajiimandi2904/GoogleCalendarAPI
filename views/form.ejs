<!DOCTYPE html>
<html>
  <head>
    <title>Add Event</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="container py-5">
    <h1 class="mb-4 text-primary">Add Event to Google Calendar</h1>

    <form action="/reviewevent" method="POST" class="card p-4 shadow-sm mb-5">
      <div class="mb-3">
        <label class="form-label">Title:</label>
        <input type="text" name="title" class="form-control" required />
      </div>

      <div class="mb-3">
        <label class="form-label">Date:</label>
        <div class="d-flex gap-2">
          <input
            type="number"
            name="day"
            placeholder="DD"
            class="form-control"
            required
          />
          <input
            type="number"
            name="month"
            placeholder="MM"
            class="form-control"
            required
          />
          <input
            type="number"
            name="year"
            placeholder="YYYY"
            class="form-control"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Reminder:</label>
        <select name="reminder" class="form-select">
          <option value="">None</option>
          <option value="5">5 minutes before</option>
          <option value="10">10 minutes before</option>
          <option value="30">30 minutes before</option>
          <option value="60">1 hour before</option>
        </select>
      </div>

      <button type="submit" class="btn btn-success">Next âž¡</button>
    </form>

    <h2 class="mb-3">Search Events by Date</h2>
    <form action="/eventsbydate" method="GET" class="card p-4 shadow-sm">
      <div class="d-flex gap-2 mb-3">
        <input
          type="number"
          name="day"
          placeholder="DD"
          class="form-control"
          required
        />
        <input
          type="number"
          name="month"
          placeholder="MM"
          class="form-control"
          required
        />
        <input
          type="number"
          name="year"
          placeholder="YYYY"
          class="form-control"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
  </body>
</html>
